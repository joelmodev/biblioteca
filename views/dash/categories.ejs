<%- include ('./modules/header.ejs') %>

      <div style="margin-left: 280px; padding: 20px;">
        <h4 style="color: #23a7ff;">Categorias</h4>
        <a class="btn btn-pr" style="margin-bottom: 10px; float: right;" data-bs-toggle="modal" data-bs-target="#addCat"><i class="fa-solid fa-plus"></i> Adicionar</a>
        <div class="container" style="margin-top: 20px;">
            <div class="row">
              <div class="col" style="background-color: #3A4046; border-radius: 5px; padding: 10px;">
                  <table class="table table-striped table-bordered" style="margin-top: 10px;">
                <thead>
                  <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Categoria 1</td>
                    <td style="width: 12.5rem;"><button class="btn btn-pr"><i class="fa-solid fa-pen-to-square"></i> Editar</button> <button class="btn btn-danger"><i class="fa-solid fa-trash-can-arrow-up"></i> Excluir</button></td>
                  </tr>
                </tbody>
              </table>
              </div>
            </div>
          </div>
      </div>

     
  
  <!-- Modal -->
  <div class="modal fade" id="addCat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Adicionar Categoria</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form onsubmit="addCat()" id="catForm">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                  <label for="catName" class="col-form-label">Nome</label>
                </div>
                <div class="col">
                  <input type="text" id="catName" class="form-control" aria-describedby="passwordHelpInline">
                </div>
              </div>
        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="fa-solid fa-xmark" onclick="document.getElementById('catForm').reset()"></i> Cancelar</button>
          <button type="button" class="btn btn-pr"><i class="fa-solid fa-floppy-disk"></i> Salvar</button>
        </div>
      </div>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</html>