<!DOCTYPE html>
<html lang="pt-BR">
<head>

  <%- include ('./dash/modals/student-login.ejs') %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Jamil</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/style.css">
    <script src="https://kit.fontawesome.com/f8636f0dcf.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
</head>
<body data-bs-theme="dark" id="body">
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
          <!--<img src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top"> -->
            Biblioteca Jamil
          </a>
          <ul class="nav">
            <!--<li class="nav-item">
              <a href="#" class="btn-pr nav-link" data-bs-toggle="modal" data-bs-target="#loginAluno"><i class="fa-solid fa-graduation-cap"></i> Aluno</a>
            </li>-->
            <li class="nav-item">
              <a class="btn-sr nav-link" href="/dash/login"><i class="fa-solid fa-book"></i> Bibliotecario</a>
            </li>
          </ul>
        </div>
      </nav>

      <section class="books container">
        <div>
            <table class="table table-striped table-bordered"  id="searchTable">
                <thead>
                  <tr>
                    <th scope="col">Título</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Editora</th>
                    <th scope="col">Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% livros.forEach(livro => { %>
                    
                    <tr>
                      <td><%= livro.titulo %></td>
                      <td><%= livro.autor %></td>
                      <td><%= livro.editora %></td>
                      <td>
                        <% if(livro.status == 0){ %>
                          <span class="badge bg-success">Disponível</span>
                        <% }else{ %>
                          <span class="badge bg-danger">Indisponível</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
      </section>
     
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</html>
  <link rel="stylesheet" href="./css/jqueryTable.css">
  <script src="./js/jqueryTable.js" ></script>

<script>
  $(document).ready( function () {
  $('#searchTable').DataTable();
} );
  </script>